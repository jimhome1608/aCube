<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:weightSum="100" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="62dp" android:weightSum="1" android:orientation="vertical"
        android:background="#000000"
        >
        <Button android:id="@+id/bConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECT"
            android:layout_marginTop="10dp" />
        <Space
            android:layout_width="112dp"
            android:layout_height="match_parent"
            />
        <Button android:id="@+id/btnCLEAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:layout_marginTop="10dp" />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="18dp" android:weightSum="1" android:orientation="vertical"
        android:layout_weight="14.48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shake:"
            android:textColor="#000000"
            android:id="@+id/textView" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButtonShake" />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000000"
        android:layout_weight="28.49">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnYplus"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnYminus" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:id="@+id/btnYminus"
            android:layout_below="@+id/btnXplus"
            android:layout_toStartOf="@+id/btnXplus" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/btnXplus"
            android:layout_below="@+id/btnYplus"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:id="@+id/btnXminus" android:layout_below="@+id/btnYplus" android:layout_toLeftOf="@+id/btnYplus"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Down"
            android:id="@+id/btnZminus"
            android:layout_alignTop="@+id/btnYminus"
            android:layout_alignParentStart="true" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Up"
            android:id="@+id/btnZplus"
            android:layout_alignTop="@+id/btnYplus"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="18dp" android:weightSum="1" android:orientation="vertical"
        android:layout_weight="14.48">
        >
        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="Bluetooth"
            android:textSize="15dp"
            android:password="false"
            android:textColor="#000000"
            android:layout_weight="0.22" />
    </TableRow>



</LinearLayout>
