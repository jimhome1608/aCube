<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:weightSum="100" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="62dp" android:weightSum="1" android:orientation="vertical"
        android:background="#ff555555"
        >
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/imageView2"
            android:src="@android:drawable/ic_dialog_dialer" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />
        <Button android:id="@+id/bConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECT"
            android:layout_marginTop="10dp"
            android:textSize="10dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />
        <Button android:id="@+id/btnCLEAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            android:textSize="10dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_launcher" />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="18dp" android:weightSum="1" android:orientation="vertical"
        android:layout_weight="14.48">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake"
            android:id="@+id/cbxShake" />

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:id="@+id/cbxSound"
            android:checked="true" />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="28.49"
        android:background="#ffffff00">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/arrow_up_float"
            android:id="@+id/btnYplus"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnYminus"
            android:textSize="6pt" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/arrow_down_float"
            android:id="@+id/btnYminus"
            android:layout_below="@+id/btnXplus"
            android:layout_toStartOf="@+id/btnXplus"
            android:textSize="6pt" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_media_next"
            android:id="@+id/btnXplus"
            android:layout_below="@+id/btnYplus"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_media_previous"
            android:id="@+id/btnXminus"
            android:layout_below="@+id/btnYplus"
            android:layout_toLeftOf="@+id/btnYplus" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_more"
            android:id="@+id/btnZminus"
            android:layout_alignTop="@+id/btnYminus"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_upload_you_tube"
            android:id="@+id/btnZplus"
            android:layout_alignTop="@+id/btnYplus"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="18dp" android:weightSum="1" android:orientation="vertical"
        android:layout_weight="14.48">
        >
        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="Bluetooth"
            android:textSize="15dp"
            android:password="false"
            android:textColor="#000000"
            android:layout_weight="0.22" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="120dp" android:weightSum="1" android:orientation="vertical"
        android:layout_weight="14.48">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Select"
        android:textColor="#ffffffff"
        android:id="@+id/btnSetBlue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#ff0000ff" />
        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

    </TableRow>


</LinearLayout>
